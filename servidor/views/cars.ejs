<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Carros</title>
</head>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Cor de fundo e estilo de fonte */
body {
    font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: #f5f5f5;
    color: #333;
}

/* Cabeçalho */
header {
    background-color: #000;
    color: #fff;
    padding: 20px;
}

nav ul {
    display: flex;
    justify-content: center;
    list-style: none;
}

nav ul li {
    margin: 0 20px;
}

nav ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 18px;
}

/* Caixa central */
.auth-container {
    width: 100%;
    max-width: 600px;
    margin: 80px auto;
    padding: 30px;
    background-color: #fff;

    border-radius: 10px;
    box-shadow: 0 5px 15px #00000020;
    text-align: center;
}

/* Título */
.auth-container h1 {
    margin-bottom: 25px;
    font-size: 28px;
    color: #111;
}

/* Lista de carros */
.car-item {
    background: #f0f0f0;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
    text-align: left;
    border: 1px solid #ddd;
}

/* Botões */
button {
    padding: 8px 12px;
    background-color: #051243;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    margin-right: 5px;
    margin-top: 10px;
    font-size: 14px;
}

button:hover {
    background-color: #030e37;
}

/* Links */
.auth-container a {
    display: block;
    margin-top: 15px;
    color: #051243;
    text-decoration: none;
    font-weight: bold;
}

.auth-container a:hover {
    text-decoration: underline;
}

.id-text {
    font-size: 13px;
    color: #555;
}
</style>

<body>

<header>
    <nav>
        <ul>
            <li><a href="/cars">Carros</a></li>
            <li><a href="/car_registration">Cadastrar Carro</a></li>
            <li><a href="/car_updater">Atualizar Carro</a></li>
            <li><a href="/remove_car">Remover Carro</a></li>
        </ul>
    </nav>
</header>

<div class="auth-container">

    <h1>Carros Disponíveis</h1>

    <% cars.forEach(carro => { %>

        <div class="car-item">

            <strong><%= carro.db_marca %> - <%= carro.db_modelo %></strong><br>
            Ano: <%= carro.db_ano %> <br>
            Preço: R$ <%= carro.db_preco %> <br>
            Quantidade: <%= carro.db_qtde %> <br>

            <span class="id-text">ID: <%= carro._id %></span>

            <br><br>

            <!-- Botão Vender -->
            <form action="/sell_car" method="POST" style="display:inline-block;">
                <input type="hidden" name="id" value="<%= carro._id %>">
                <button type="submit">Vender</button>
            </form>

            <!-- Botão Atualizar -->
            <form action="/car_updater" method="GET" style="display:inline-block;">
                <input type="hidden" name="id" value="<%= carro._id %>">
                <button type="submit">Atualizar</button>
            </form>

            <!-- Botão Remover -->
            <form action="/remove_car" method="POST" style="display:inline-block;">
                <input type="hidden" name="id" value="<%= carro._id %>">
                <button type="submit">Remover</button>
            </form>

        </div>

    <% }) %>

    <a href="/car_registration">Cadastrar Novo Carro</a>
</div>

</body>
</html>
